<Window x:Class="WebSignalR.TestHarness.SubscribeCallbackView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SubscribeCallbackView" Height="390" Width="490">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="0.3*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<StackPanel>
			<TextBlock Text="Callback name:"/>
			<TextBox x:Name="txtCallbackName" Width="250" HorizontalAlignment="Left"/>
			<Button x:Name="btnRegisterCallback" Content="Register callback"  Click="btn_OnRegister"/>
		</StackPanel>
	</Grid>
</Window>
