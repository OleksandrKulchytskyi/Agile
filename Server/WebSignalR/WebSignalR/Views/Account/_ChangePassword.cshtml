@model  WebSignalR.Common.ViewModels.ChangePasswordViewModel

@using (Html.BeginForm("JsonChangePassword", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { Id = "changePasswordForm" }))
{
	@Html.AntiForgeryToken()

	<fieldset>
		<legend>Change Password Form</legend>
		<ol>
			<li>
				@Html.LabelFor(m => m.Password)
				@Html.PasswordFor(m => m.Password)
			</li>
			<li>
				@Html.LabelFor(m => m.ConfirmPassword)
				@Html.PasswordFor(m => m.ConfirmPassword)
			</li>

		</ol>
		@Html.ValidationSummary()
	</fieldset>
}